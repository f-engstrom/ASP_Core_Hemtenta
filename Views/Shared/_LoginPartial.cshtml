@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><img class="icon" src="https://image.flaticon.com/icons/svg/912/912316.svg" alt=""></a>
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
            <button type="submit" class="nav-link btn btn-link text-dark"><img class="icon" src="https://image.flaticon.com/icons/svg/992/992680.svg" alt=""></button>
        </form>
}
else
{
<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register"> <img class="icon" src="https://image.flaticon.com/icons/svg/1647/1647909.svg" alt=""> </a>
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">
            <img class="icon" src="https://image.flaticon.com/icons/svg/364/364090.svg" alt="">
        </a>
}
